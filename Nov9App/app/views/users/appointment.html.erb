<script type="text/javascript">
        $(document).ready(function(){
            $('#role').on('change', function(){
            var s = document.getElementById('role');
            var role = s.options[s.selectedIndex].value;
            
            var specialty = s.options[s.selectedIndex].text
            var count = 0;
            while (count < 100) {
                if (role == count) {
                    
                if(specialty == "BackProblems"){
                $(".box").not(".BackProblems").hide();
                $(".BackProblems").show();
                }
                
                else if(specialty == "Allergy"){
                $(".box").not(".Allergy").hide();
                $(".Allergy").show();
                }
                
                
                
            }
                count++;
            }
            
            });
        });
      </script>
      
       
